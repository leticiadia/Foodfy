<div class="items">
    <div>Imagem da receita</div>
    <div>
        <div id="photos-upload">
            <input id="photos-input" type="file" name="photos" multiple accept="image/*" onchange="PhotosUpload.handleFileInput(event)">
            <div id="box-image"></div>
        </div>
        
        <div id="photos-preview"></div>
    </div>
</div>

<div class="items">
    <div>Nome da receita</div>
    <div>
        <input type="text" name="title" value="{{ inforeceita.title}}">
    </div>
</div>

<div class="items">
    <div>Chef</div>
    <div>
        <select name="chef">
            {% for chef in chefOptions %}
                <option value="{{ chef.id }}" {% if recipes.chef_id == chef.id %}selected{%endif%}>{{ chef.name }}</option>
            {% endfor %}
        </select>
    </div>
</div>

<div id="ingredients" class="items">
    <div>Ingredientes</div>
    <div class="ingredient">
        <input type="text" name="ingredients[]" value="{{ inforeceita.ingredients }}">
    </div>
</div>
<button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

<div id="preparations" class="items">
    <div>Modo de preparo</div>
    <div class="preparation">
        <input type="text" name="preparation[]" value="{{ inforeceita.preparation }}">
    </div>
</div>
<button type="button" class="add-mode-preparation">Adicionar novo passo</button>

<div class="items">
    <div>Informações adicionais</div>
    <div>
        <textarea name="information[]" cols="95" rows="10"  id="add_information">{{ inforeceita.information }}</textarea>
    </div>
</div>