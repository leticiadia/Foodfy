<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <title>Foodfy</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/img/favicon.ico" type="/image/x-icon">
        <link rel="stylesheet" href="/styles/chefs.css">
        <link rel="stylesheet" href="/styles/recipes.css">
        <link rel="stylesheet" href="/styles/global.css">
    </head>
    <body>
        <div class="content">
            <header>
                <div class="secondMenu">
                    <div id="logoWhite">
                        <a href="/"><img src="/img/logo.png" alt="Logo da pÃ¡gina"></a>
                    </div>
                    <div class="linksMenu">
                        <a href="/admin/inforeceitas">Receitas</a>
                        <a href="/admin/chefs">Chefs</a>
                    </div>
                </div>
            </header>

            {% block content%}

            <div class="chefs-container">
                    <section>
                        <div class="page-title">
                            <h2>Gerenciar Chefs</h2>
                        </div> 
                    </section>
                    
                    <section class="chefs-admin">
                        {% for chef in chefs %}
                            <div class="chef-card">
                                <img src="{{ chef.avatar_url }}" class="images-chefs"  alt="">
                    
                                <div id="info-card">
                                    <p>{{ chef.name }}</p>
                                    <p>{{ chef.total_recipes }} receitas</p>
                                    <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                                </div>
                            </div>
                        {% endfor %}
                    </section>

                    <div class="pagination" data-page={{pagination.page}} data-total={{pagination.total}} data-filter={{filter}}></div>
                </div>
                <script src="/script.js"></script>
            {% endblock%}
        </div>
    </body>
</html>
