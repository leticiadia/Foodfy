<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <title>Foodfy</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/img/favicon.ico" type="/image/x-icon">
        <link rel="stylesheet" href="/style.css" type="text/css">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,400;0,700;1,100;1,400;1,700&display=swap" rel="stylesheet">
    </head>
    <body>
        <header>
            <div id="logoWhite">
                <a href="/"><img src="/img/logo.png" alt="Logo da pÃ¡gina"></a>
            </div>
        </header>

        {% block content %}
             <div>
                <section>
                    <div class="name_chef">
                        <h2>Chef: {{ chef.name }}</h2>
                        <a href="/chefs/chefs/{{ chef.id }}/edit">Editar chef</a>
                    </div>
                </section>

                <section class="chefs">
                    <div class="chef_image">
                        <img src="{{ chef.avatar_url }}">
                    </div>  

                    <div class="subname_chef">
                        <h2>{{ chef.name }}</h2>
                        <p>{{ chef.inforeceita_name }} receitas</p>
                    </div>
                </section>


                 <section>
                    <div class="title-recipes">
                        <h3>Receitas</h3>
                    </div> 
                </section>

                <section>
                    <div class="recipes">
                        {% for inforeceita in inforeceitas %}
                            <div class="recipes-card">
                                <img src="{{ inforeceita.image }}" class="images-recipes"  alt="">
                                <div id="info-card">
                                    <h3>{{ inforeceita.title }}</h3>
                                    <p>por {{ inforeceita.name }}</p>
                                    <a href="/admin/inforeceitas/{{ inforeceita.id }}">Visualizar</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </section>
                
                <div class="createDate">
                    <p>Criado em:</p>
                    <div>{{ chef.created_at }}</div>
                </div>
            </div>
        {% endblock %}
        
    </body>
</html>